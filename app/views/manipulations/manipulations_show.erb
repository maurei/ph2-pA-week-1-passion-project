<div class = "container">

	<h1> Manipulations to PD, you dumbass</h1>

		<% @manipulations.each_with_index do |manipulation, i| %>
		<p>----------------</p>
		<p>MANIPULATION NUMBER: <%= @manipulations.length - i %> 
		<% if @admin %>
			<form action='/manipulations/<%=manipulation.id%>' method='post'>
   			<input type="hidden" name="_method" value="delete">
    		<input type='submit' value='undo'>
  		</form>
  	<% end %>
		</p>
		<p><%= manipulation.action %>: <%= manipulation.amount %></p>
		<p>Date of Event: <%= manipulation.issue_date %></p>
		<p>Description: <%= manipulation.description %></p>
		<br><br>
		<% end %>
</div>

